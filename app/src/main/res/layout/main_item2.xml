<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/main_item_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_login"
        android:backgroundTint="#FFFFFF"
        android:orientation="horizontal"
        android:padding="20dp"
        android:shadowDx="2"
        >

        <!--할일 제목-->
        <TextView
            android:id="@+id/tv_goal_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="20dp"
            android:text="목표1"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/btn_login"
            />

        <ImageView
            android:id="@+id/iv_circle_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_circle_pink" />

        <!--누적시간-->
        <TextView
            android:id="@+id/tv_time_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="5dip"
            android:text="100h 50m"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_alignParentEnd="true"
            app:drawableLeftCompat="@drawable/ic_add_time" />
    </RelativeLayout>


</LinearLayout>